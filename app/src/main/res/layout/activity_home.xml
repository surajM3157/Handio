<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBox"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Ev_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/LightBox"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="6dp"
                android:hint="Location"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-197dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_profile_logo" />
        </RelativeLayout>

        <SearchView
            android:id="@+id/SearchView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_bg"
            android:gravity="center_vertical"
            android:iconifiedByDefault="false"
            android:inputType="text"
            android:queryHint="Search now"
            android:textColor="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHandio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_single_home" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal"
                    app:cardCornerRadius="24dp">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/handio_image1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text=" EAT AND FEEL"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Delicious Desi Handi's Mutton, Mushroom, chiken"
                            android:textColor="@color/red"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins_black_italic"
                            android:text="Food is any Subtence consumed to provided nutritional support for an organism."
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="FRESH HANDI'S"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="We Provide People Best Way To Eat Best Handi's Desi Food"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHandioAllBlog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_home_blog_product" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/LightBox"
                    app:cardCornerRadius="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="100dp"
                        android:src="@drawable/imageb" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_home_bg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="WE PUT 100% OF LOVE AND DEDICATION"
                            android:textColor="@color/red"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Handi Biryanis In Lucknow"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="The new taste and Zayka awaiting you many varities of handi biryani Like mushroom biryani,Chicken biryani,Mutton biryani,Anda biryani,Fish biryani,Kathal bireyani"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Liscensed Restaurant"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Sanitised Restaurant"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Discount Applied"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/btn_bg"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingHorizontal="35dp"
                            android:text="Who We Are?"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvAllItem"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn2_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingHorizontal="35dp"
                    android:text="ALL ITEMS"
                    android:textColor="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHandioAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_all" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"

                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/grent_bg"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="775+"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/grent_bg"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="775+"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/grent_bg"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="775+"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="15sp"
                            android:background="@drawable/grent_bg"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="775+"
                            android:textColor="@color/black"
                            android:textSize="25sp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/LightBox"
        app:itemIconSize="28dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/red"
        app:menu="@menu/navigation_view">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>